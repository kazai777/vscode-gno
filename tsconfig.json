{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
    	"lib": ["ES2022"],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
    	"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"third_party",
		".vscode-test",
	]
}
